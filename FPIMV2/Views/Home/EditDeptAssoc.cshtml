@model FPIMV2.Models.FacultyProfile

@{
    ViewBag.Title = "Departmental Associations";
}
@Html.Partial("WelcomeBox", Model) 
<h2>Departmental Associations</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <input id="profileID" name="profileID" type="hidden" value="@Model.ProfileId" />
    <input id="userID" name="userID" type="hidden" value="@Model.UserId" />
    <input id="ESFAD" name="esafad" type="hidden" value="@Model.ESFAD" />
<div id="dept-assoc" data-userid=@Model.UserId >
  <div><h3><input id="Ranger School" name="dept" type="checkbox" value="Ranger School" />&nbsp;Ranger School</h3></div>
  <div><h3><input id="Chemistry" name="dept" type="checkbox" value="Chemistry" />&nbsp;Chemistry</h3></div>
  <div><h3><input id="EFB" name="dept" type="checkbox" value="EFB" />&nbsp;EFB</h3></div>
  <div><h3><input id="ERE" name="dept" type="checkbox" value="ERE" />&nbsp;ERE</h3></div>
  <div><h3><input id="Environmental Studies" name="dept" type="checkbox" value="Environmental Studies" />&nbsp;Environmental Studies</h3></div>
  <div><h3><input id="Writing Program" name="dept" type="checkbox" value="Writing Program" />&nbsp;Environmental Writing Program</h3></div>
  <div><h3><input id="Environmental Science" name="dept" type="checkbox" value="Environmental Science" />&nbsp;Environmental Science</h3></div>
  <div><h3><input id="FNRM" name="dept" type="checkbox" value="FNRM" />&nbsp;FNRM</h3></div>
  <div><h3><input id="LA" name="dept" type="checkbox" value="LA" />&nbsp;Landscape Architecture</h3></div>
  <div><h3><input id="Moon Library" name="dept" type="checkbox" value="Moon Library" />&nbsp;Moon Library</h3></div>
  <div><h3><input id="PBE" name="dept" type="checkbox" value="PBE" />&nbsp;PBE</h3></div>
  <div><h3><input id="SCME" name="dept" type="checkbox" value="SCME" />&nbsp;SCME</h3></div>
</div>
        <p>
            <input type="submit" value="Update" />
        </p>
}
<div>
    @Html.ActionLink("Cancel", "ManageDeptAssocAOS", "Home", new { profileId = @Model.ProfileId}, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/aosassoc")
}