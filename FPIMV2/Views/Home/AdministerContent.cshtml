@model IEnumerable<FPIMV2.Models.spFacultyList_Result>

@{
    ViewBag.Title = "Administer Content";
}

<h2>Edit a Profile</h2>
<style>
th, td { vertical-align: top}
</style>
<h3>Select the faculty member whose pages/modules you would like to edit.</h3>
<h4>Location, phone and emails must be modified by the faculty member through the <a href="http://www.esf.edu/portals/"> Faculty/Staff portal.</a></h4>
<h4>Main departments must be modified though HR.</h4>

<div>
@Html.ActionLink("Done", "AdminIndex", "Home", new { profileId = @ViewBag.ProfileId }, new {@class="ui-widget-header ui-corner-all"})
</div>

<table>
    <tr>
            <th class="twelve bggray"><strong>Faculty</strong></th>
            <th class="twelve bggray"><strong>Department</strong></th>
            <th  class="twelve bggray"><strong>Office</strong></th>
            <th class="twelve bggray"><strong>Phone</strong><span class="tengray"><br />
              (315&nbsp;Area&nbsp;code)</span></th>
            <th  class="twelve bggray"><strong>Email</strong></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            <strong>@Html.ActionLink(item.FullName + ", ", "Index", "Home", new { id=item.UserId, profileID=item.UserId, suad=item.SUAD, esfad=item.ESFAD, lastname = item.LastName, firstname = item.FirstName }, null)</strong>
            @Html.DisplayFor(modelItem => item.CampusTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkLoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OffcRoom)
            @Html.DisplayFor(modelItem => item.OffcBldg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OffcPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailId)
        </td>
    </tr>
}
</table>

